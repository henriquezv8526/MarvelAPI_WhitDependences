<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Bit Technologies - Marvel API" />
    <title>MarvelAPI - @ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" media="screen" href="/css/stylesheet.css" />


    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/General.js"></script>
    <script src="~/Content/js/jquery-1.11.2.js"></script>
    <script src="~/Scripts/jquery-2.0.3.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />


    <link href="~/Content/css/General.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.validate.js"></script>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- HEADER -->
    <div id="header_wrap" class="outer">
        <header class="inner">



            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Menu</a>
                    </div>
                    <ul class="nav navbar-nav">
                        @*<li class="active">*@
                        <li>
                            <a href="@Url.Action("Index", "Home")" class="elements">
                                <span>Pagina Principal</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Branch")" class="elements">
                                <span>Sucursales</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "ComicsStore")" class="elements">
                                <span>Comics por Tienda</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "ListComics")" class="elements">
                                <span>Listado de Comics</span>
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>

            <h1 id="project_title" style="color: red;">Bit Technologies</h1>
            <h1 id="project_tagline" style="color: white;">Marvel API</h1>


        </header>
    </div>
    <!-- MAIN CONTENT -->
    <div id="main_content_wrap" class="outer">
        <section id="main_content" class="inner">
            @RenderBody()
        </section>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ember")
    @RenderSection("scripts", required: false)


    <!-- Modal cargando-->
    <div class="modal fade" id="mdlCargando" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Mensajes</h4>
                </div>
                <div class="modal-body">
                    <h4>Cargando...</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal cargando-->
    <!-- Modal mensaje-->
    <div class="modal fade" id="mdlMensaje" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="overflow:auto;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Mensajes</h4>
                </div>
                <div class="modal-body">
                    <h4 id="txtMensaje"></h4>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
